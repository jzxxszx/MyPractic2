<Page x:Class="MyPrac2.Dop2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dop2" FontFamily="Candara" FontSize="14">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите год:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" FontWeight="Bold"/>
        <TextBox Name="YearBox" Grid.Column="2" Height="32" Width="100"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" >
            <TextBox Name="Answer" VerticalScrollBarVisibility="Visible" Margin="16" Height="auto" IsReadOnly="True"/>
        </StackPanel>

        <Button Content="Рассчитать" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Height="22" Width="100" Click="Button_Click"/>
    </Grid>
</Page>

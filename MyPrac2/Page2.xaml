<Page x:Class="MyPrac2.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите количество секунд:" Padding="12" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="Sec" Margin="16" Padding="12" Height="auto" Width="100" HorizontalAlignment="Left"/>
            <TextBlock Text="Прошло секунд:" Padding="12" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="Answer" Margin="16" Padding="12" Height="auto" Width="100" HorizontalAlignment="Left" IsReadOnly="True"/>

            <Button Content="Рассчитать" Height="42" Width="100" Margin="16" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>

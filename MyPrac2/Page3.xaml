<Page x:Class="MyPrac2.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите число K:" Padding="12" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="Ktextbox" HorizontalAlignment="Left" Height="auto" Width="100" Margin="16" Padding="12"/>
            <TextBlock Text="Результат:" Padding="12" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="Answer" Height="auto" HorizontalAlignment="Left" Margin="16" Padding="12" Width="100" IsReadOnly="True"/>

            <Button Content="Рассчитать" Height="42" Width="100" Margin="16" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
